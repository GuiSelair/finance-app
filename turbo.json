{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": ["^build", "**/.env"],
    "globalEnv": [],
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
        },
        "lint": {
            "outputs": []
        },
        "test": {
            "dependsOn": ["^build"],
            "outputs": []
        },
        "dev": {
            "cache": false,
            "persistent": true,
            "dependsOn": ["^build"]
        },
        "dev:e2e": {
            "cache": false,
            "persistent": true,
            "dependsOn": ["^build"]
        },
        "migration:run": {
            "cache": false,
            "persistent": true,
            "dependsOn": ["^build"]
        },
        "migration:run:e2e": {
            "cache": false,
            "persistent": false,
            "dependsOn": ["^build"]
        },
        "cleanup:e2e": {
            "cache": false,
            "persistent": false,
            "dependsOn": ["^build"]
        }
    }
}
